{
	"name": "@trvt/assets",
	"version": "0.4.1",
	"type": "module",
	"main": "build/index.js",
	"files": [
		"build/*",
		"styles/*",
		"scripts/*"
	],
	"description": "Trivet styles and utility scripts.",
	"author": "C. Egor Kloos",
	"license": "Apache-2.0",
	"homepage": "https://github.com/dutchcelt/trivet#readme",
	"packageManager": "yarn@3.4.1",
	"dependencies": {
		"@trvt/designtokens": "workspace:^"
	},
	"devDependencies": {
		"wawoff2": "^2.0.1"
	},
	"scripts": {
		"build:icons": "node ./_lib/icons.js",
		"build:rollup": "rollup -c ../configs/rollup.config.js",
		"build:css": "node ./_lib/bundleCSS.js",
		"build": "yarn build:icons && yarn build:rollup && yarn build:css",
		"develop": "yarn build --watch"
	}
}

{
	"parser": "@babel/eslint-parser",
	"env": {
		"browser": true,
		"es2024": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"requireConfigFile": false,
		"babelOptions": {
			"plugins": ["@babel/plugin-syntax-import-attributes"]
		}
	},
	"ignorePatterns": [
		"**/vendor/*.js",
		"**/build/*.js",
		"**/tests/*.js",
		"**/docs/scripts/*.js",
		"**/docs/styles/*.css",
		"**/utils/scripts/*.js",
		"**/assets/**/*",
		"**/*.html"
	],
	"rules": {}
}

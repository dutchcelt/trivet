	"scripts": {
		"build:clean": "trivet clean --buildPath styles",
		"build:tokens": "trivet tokens --themePath theme --buildPath styles",
		"build:eleventy": "npx -y @11ty/eleventy --config=_configs/.eleventy.js",
		"build:banner": "chalk -t '{blueBright.bold \n\n=== Docs ===================================================}'",
		"build": "npm run build:banner && npm run build:tokens && npm run build:eleventy",
		"watch": "npm run build:eleventy --watch --incremental",
		"develop": "npm run build:clean && npm run watch & npm run build:tokens --watch"
	},
	"devDependencies": {
		"@trvt/cli": "^1.3.0",
		"chalk-cli": "^5.0.1"

{
	"name": "@trvt/docs",
	"description": "Trivet, a system for building webpages",
	"version": "0.3.3",
	"type": "module",
	"main": "index.js",
	"author": "C. Egor Kloos",
	"license": "Apache-2.0",
	"homepage": "https://github.com/dutchcelt/trivet#readme",
	"packageManager": "yarn@3.2.0",
	"devDependencies": {
		"@11ty/eleventy": "^1.0.0",
		"copyfiles": "^2.4.1"
	},
	"scripts": {
		"copy": "copyfiles \"./src/*.{css,js}\" \"../dist\" -f",
		"copy:webcomponents": "copyfiles \"../webcomponents/**/*.{css,js}\" \"../dist/**.*\"",
		"copy:tokens": "copyfiles \"../designtokens/**/*.{css,json}\" \"../dist/**.*\"",
		"copy:assets": "copyfiles \"../assets/**/*.{css,jpg,svg,png,webp,woff,woff2}\" \"../dist/**.*\"",
		"build:old": "yarn copy && yarn copy:assets && yarn copy:tokens && yarn eleventy --input=./src/index.html --output=../dist",
		"build": "echo 'build docs on hold'",
		"start": "yarn build --serve --port=8081",
		"develop": "yarn build --watch"
	},
	"dependencies": {
		"@trvt/article": "workspace:^",
		"@trvt/header": "workspace:^",
		"@trvt/layout": "workspace:^"
	}
}

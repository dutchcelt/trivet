{
  "name": "trivet",
  "version": "2.0.0",
  "description": "A very simple dynamic loader of web components and styles",
  "main": "src/index.html",
  "scripts": {
    "test": "karma start --coverage",
    "start": "es-dev-server",
    "assets": "cpx \"src/**/*.css\" dist & cpx \"src/**/*.{html,png,jpg,gif,svg,json}\" dist & cpx \"src/**/*.js\" dist -c \"terser -c\"",
    "utils:lit-element": "cpx \"node_modules/lit-element/**/*.js\" dist/utils/lit-element -c \"terser -c --ecma 2017\"",
    "utils:lit-html": "cpx \"node_modules/lit-html/**/*.js\" dist/utils/lit-html -c \"terser -c --ecma 2017\"",
    "utils": "yarn utils:lit-html & yarn utils:lit-element",
    "polyfills:construct-styles": "cpx \"node_modules/construct-style-sheets-polyfill/dist/**/*.js\" dist/polyfills -c \"terser -c\"",
    "polyfills:module-shims": "cpx \"node_modules/es-module-shims/dist/**/*.js\" dist/polyfills -c \"terser -c\"",
    "polyfills": "yarn polyfills:construct-styles & yarn polyfills:module-shims",
    "scss": "node-sass \"src\" -o \"dist\" -x --output-style compressed ",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "build:develop": "trash dist && yarn build",
    "watch": "yarn assets -w & yarn scss -w",
    "develop": "yarn build:develop && yarn watch | yarn start",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook",
    "start:build": "npm run build && es-dev-server --root-dir dist --app-index src/index.html --open --compatibility none"
  },
  "repository": "git+https://github.com/dutchcelt/trivet.git",
  "keywords": [
    "loader",
    "css",
    "javascript",
    "json"
  ],
  "author": "C. Egor Kloos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dutchcelt/trivet/issues"
  },
  "homepage": "https://github.com/dutchcelt/trivet#readme",
  "devDependencies": {
    "@open-wc/building-rollup": "^1.0.0",
    "@open-wc/demoing-storybook": "^2.0.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/karma-esm": "^2.14.1",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "browser-sync": "^2.26.7",
    "chai": "^4.2.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.48.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "http2": "^3.3.7",
    "husky": "^1.0.0",
    "karma": "^5.0.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-safari-launcher": "^1.0.0",
    "lint-staged": "^8.0.0",
    "mocha": "^7.1.2",
    "prettier": "^2.0.4",
    "puppeteer": "^3.0.4",
    "rimraf": "^2.6.3",
    "rollup": "^2.3.4",
    "terser": "^4.6.12",
    "trash-cli": "^1.4.0"
  },
  "dependencies": {
    "construct-style-sheets-polyfill": "^2.3.5",
    "cpx": "^1.5.0",
    "es-module-shims": "^0.4.6",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "node-sass": "^4.13.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}

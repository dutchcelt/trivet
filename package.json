{
	"name": "@trvt/root",
	"version": "2.0.2",
	"private": true,
	"type": "module",
	"description": "Trivet, a system for building webpages",
	"scripts": {
		"build": "yarn workspaces foreach -pt run build",
		"server": "wds -c configs/web-dev-server.config.js",
		"develop": "yarn build && yarn server",
		"start": "yarn workspace @trvt/docs run develop",
		"lint": "eslint ./webcomponents/**/*.js && stylelint ./webcomponents/**/*.css",
		"test": "wtr ./webcomponents/**/*.test.js --node-resolve"
	},
	"author": "C. Egor Kloos",
	"license": "Apache-2.0",
	"repository": "https://github.com/dutchcelt/trivet",
	"workspaces": [
		"assets",
		"cli",
		"designtokens",
		"docs",
		"webcomponents/*"
	],
	"packageManager": "yarn@3.4.1",
	"devDependencies": {
		"@changesets/cli": "^2.19.0",
		"@esm-bundle/chai": "^4.3.4-fix.0",
		"@web/dev-server": "^0.1.35",
		"@web/test-runner": "^0.13.27",
		"browser-env": "^3.3.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"prettier": "^2.5.1",
		"stylelint": "^14.5.1",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^25.0.0"
	}
}

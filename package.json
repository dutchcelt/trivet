{
	"name": "trivet",
	"version": "1.0.0",
	"description": "A very simple dynamic loader of scripts, styles, and json.",
	"main": "trivet.mjs",
	"scripts": {
		"test": "ava",
		"serve": "browser-sync start -s \"dist\" -f \"dist\"  --cors --https",
		"parcel": "parcel src/index.html",
		"assets": "cpx \"src/**/*.{html,png,jpg,gif,svg,json,js}\" dist",
		"js": "babel src -d dist",
		"scss": "node-sass \"src\" -o \".cache\" --output-style compressed ",
		"prefix": "postcss \".cache/**/*.css\" -u autoprefixer -d dist --no-map",
		"css": "yarn scss && yarn prefix",
		"build": "yarn assets & yarn css & yarn html",
		"watch": "yarn assets --watch & yarn scss --watch & yarn prefix --watch",
		"develop": "yarn build && yarn serve | yarn watch",
		"html": "node \"./templates/createHTML.js\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dutchcelt/trivet.git"
	},
	"keywords": [
		"loader",
		"css",
		"javascript",
		"json"
	],
	"author": "C. Egor Kloos",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/dutchcelt/trivet/issues"
	},
	"homepage": "https://github.com/dutchcelt/trivet#readme",
	"devDependencies": {
		"browser-sync": "^2.18.13",
		"create-html": "^4.1.0"
	},
	"dependencies": {
		"autoprefixer": "^7.2.5",
		"babel-cli": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"cpx": "^1.5.0",
		"node-sass": "^4.7.2",
		"postcss-cli": "^4.1.1"
	}
}

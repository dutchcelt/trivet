{
  "name": "trivet",
  "private": true,
  "version": "2.0.0",
  "description": "A very simple dynamic loader of web components and styles",
  "scripts": {
    "develop:components": "yarn workspace webcomponents rollup -c -w",
    "develop:tokens": "yarn workspace designtokens develop",
    "develop": "yarn develop:tokens | yarn develop:components",
    "build:components": "yarn workspace webcomponents rollup -c",
    "build:tokens": "yarn workspace designtokens build",
    "build": "yarn build:tokens | yarn build:components"
  },
  "repository": "git+https://github.com/dutchcelt/trivet.git",
  "keywords": [
    "loader",
    "css",
    "javascript",
    "json"
  ],
  "author": "C. Egor Kloos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dutchcelt/trivet/issues"
  },
  "homepage": "https://github.com/dutchcelt/trivet#readme",
  "workspaces": [
    "webcomponents/*",
    "storybook",
    "designtokens"
  ],
  "devDependencies": {
    "@open-wc/building-rollup": "^2.0.1",
    "@web/dev-server": "^0.1.28",
    "rollup": "^2.60.0",
    "rollup-plugin-import-map": "^2.2.2",
    "rollup-plugin-lit-css": "^3.2.1"
  }
}

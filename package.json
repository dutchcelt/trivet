{
	"name": "@trvt/root",
	"version": "2.0.2",
	"private": true,
	"type": "module",
	"description": "Trivet, a system for building webpages",
	"scripts": {
		"build": "npm run build:workspaces && npm run build:docs",
		"build:workspaces": "npm --workspaces run build --if-present --silent",
		"build:docs": "npm -w @trvt/docs run build:all --silent",
		"develop": "npm --workspaces run develop --if-present",
		"develop:docs": "npm -w @trvt/docs run develop:all",
		"server": "npx wds -c configs/web-dev-server.config.js",
		"lint": "npx eslint ./webcomponents/**/*.js && stylelint ./webcomponents/**/*.css",
		"test": "npx wtr ./webcomponents/**/*.test.js --node-resolve"
	},
	"author": "C. Egor Kloos",
	"license": "AGPLv3",
	"repository": "https://github.com/dutchcelt/trivet",
	"workspaces": [
		"assets",
		"docs",
		"cli",
		"utils",
		"designtokens",
		"webcomponents/*"
	],
	"devDependencies": {
		"@changesets/cli": "^2.19.0",
		"@esm-bundle/chai": "^4.3.4-fix.0",
		"@rollup/plugin-terser": "^0.4.0",
		"@web/dev-server": "^0.1.35",
		"@web/dev-server-import-maps": "^0.0.7",
		"@web/rollup-plugin-copy": "^0.3.0",
		"@web/rollup-plugin-html": "^1.11.0",
		"@web/test-runner": "^0.13.27",
		"chalk": "^5.3.0",
		"chalk-cli": "^5.0.1",
		"chokidar": "^3.5.3",
		"chokidar-cli": "^3.0.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"lightningcss": "^1.19.0",
		"prettier": "^2.5.1",
		"rollup": "^3.26.2",
		"rollup-plugin-native-css-modules": "^1.1.1"
	}
}

{
	"name": "trivet",
	"version": "2.0.0",
	"description": "A very simple dynamic loader of web components and styles",
	"main": "server.js",
	"scripts": {
		"start": "node server & browser-sync start --proxy \"localhost:9000\" --cors --no-inject-changes --https --reload-debounce 300 --no-open",
		"assets": "cpx \"src/**/*.css\" dist & cpx \"src/**/*.{html,png,jpg,gif,svg,json}\" dist & cpx \"src/**/*.js\" dist -c \"terser -c\"",
		"utils:lit-element": "cpx \"node_modules/lit-element/**/*.js\" dist/utils/lit-element -c \"terser -c --ecma 2017\"",
		"utils:lit-html": "cpx \"node_modules/lit-html/**/*.js\" dist/utils/lit-html -c \"terser -c --ecma 2017\"",
		"utils": "yarn utils:lit-html & yarn utils:lit-element",
		"polyfills:construct-styles": "cpx \"node_modules/construct-style-sheets-polyfill/dist/**/*.js\" dist/polyfills -c \"terser -c\"",
		"polyfills:module-shims": "cpx \"node_modules/es-module-shims/dist/**/*.js\" dist/polyfills -c \"terser -c\"",
		"polyfills": "yarn polyfills:construct-styles & yarn polyfills:module-shims",
		"scss": "node-sass \"src\" -o \"dist\" -x --output-style compressed ",
		"build": "yarn assets & yarn polyfills & yarn utils & yarn scss",
		"build:develop": "trash dist && yarn build",
		"watch": "yarn assets -w & yarn scss -w",
		"develop": "yarn build:develop && yarn watch | yarn start"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dutchcelt/trivet.git"
	},
	"keywords": [
		"loader",
		"css",
		"javascript",
		"json"
	],
	"author": "C. Egor Kloos",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/dutchcelt/trivet/issues"
	},
	"homepage": "https://github.com/dutchcelt/trivet#readme",
	"devDependencies": {
		"browser-sync": "^2.23.6",
		"trash-cli": "^1.4.0"
	},
	"dependencies": {
		"construct-style-sheets-polyfill": "^2.3.5",
		"cpx": "^1.5.0",
		"es-module-shims": "^0.4.6",
		"express": "^4.17.1",
		"express-es6-template-engine": "^2.2.1",
		"lit-element": "^2.3.1",
		"lit-html": "^1.2.1",
		"node-sass": "^4.13.1",
		"terser": "^4.6.12"
	}
}

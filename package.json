{
  "name": "trivet",
  "private": true,
  "version": "2.0.0",
  "description": "A very simple dynamic loader of web components and styles",
  "scripts": {
    "develop:components": "yarn workspace components rollup -c -w",
    "develop:tokens": "yarn workspace tokens watch",
    "develop": "yarn develop:tokens | yarn develop:components",
    "build:components": "yarn workspace components rollup -c",
    "build:tokens": "yarn workspace tokens build",
    "build": "yarn build:tokens | yarn build:components"
  },
  "repository": "git+https://github.com/dutchcelt/trivet.git",
  "keywords": [
    "loader",
    "css",
    "javascript",
    "json"
  ],
  "author": "C. Egor Kloos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dutchcelt/trivet/issues"
  },
  "homepage": "https://github.com/dutchcelt/trivet#readme",
  "workspaces": [
    "components",
    "storybook",
    "tokens"
  ]
}

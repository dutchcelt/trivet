{
	"source": ["tokens/fonts/*.json"],
	"platforms": {
		"css": {
			"prefix": "trvt",
			"transformGroup": "css",
			"buildPath": "build/css/",
			"files": [
				{
					"destination": "trvt_tokens-fonts.css",
					"format": "css/fonts.css",
					"options": {
						"showFileHeader": false
					}
				}
			]
		},
		"js": {
			"prefix": "trvt",
			"transformGroup": "js",
			"buildPath": "build/js/",
			"files": [
				{
					"destination": "trvt_tokens-fonts.js",
					"format": "javascript/object",
					"options": {
						"showFileHeader": false
					}
				}
			]
		}
	}
}

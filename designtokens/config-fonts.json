{
	"source": ["tokens/fonts/*.json"],
	"platforms": {
		"css": {
			"prefix": "trvt",
			"transformGroup": "css",
			"buildPath": "build/css/",
			"files": [
				{
					"destination": "trvt_tokens-fonts.css",
					"format": "css/variables",
					"options": {
						"showFileHeader": false
					}
				}
			]
		},
		"json": {
			"prefix": "trvt",
			"transformGroup": "js",
			"buildPath": "build/json/",
			"files": [
				{
					"destination": "trvt_tokens-fonts.json",
					"format": "json/nested",
					"options": {
						"showFileHeader": false
					}
				}
			]
		}
	}
}

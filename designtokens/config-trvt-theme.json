{
	"source": ["theme/**/*.json"],
	"platforms": {
		"css": {
			"transforms": ["name/cti/kebab"],
			"transformGroup": "css",
			"prefix": "trvt",
			"buildPath": "build/css/",
			"files": [
				{
					"destination": "trvt_theme-tokens.css",
					"format": "css/variables",
					"options": {
						"showFileHeader": false
					}
				}
			]
		}
	}
}

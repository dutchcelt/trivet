{
	"name": "@trvt/designtokens",
	"description": "Trivet, a system for building webpages",
	"version": "0.11.0",
	"type": "module",
	"main": "index.js",
	"files": [
		"/build",
		"/tokens"
	],
	"scripts": {
		"build:clean": "trivet clean",
		"build:tokens": "trivet tokens",
		"build:banner": "chalk -t '{blueBright.bold \n\n=== Design Tokens ==========================================}'",
		"build": "npm run build:banner && npm run  build:clean && npm run build:tokens",
		"watch": "chokidar \"tokens/**/*.json\" -c \"npm run  build:tokens\"",
		"develop": "npm run watch"
	},
	"author": "C. Egor Kloos",
	"license": "AGPLv3",
	"homepage": "https://github.com/dutchcelt/trivet#readme",
	"devDependencies": {
		"@trvt/cli": "^1.1.0",
		"chalk-cli": "^5.0.1",
		"chokidar-cli": "^3.0.0"
	}
}

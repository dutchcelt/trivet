{
	"name": "@trvt/designtokens",
	"description": "Trivet, a system for building webpages",
	"version": "0.10.2",
	"type": "module",
	"main": "index.js",
	"files": [
		"/build",
		"/tokens"
	],
	"scripts": {
		"build:clean": "trivet clean",
		"build:tokens": "trivet tokens",
		"build:banner": "npx chalk -t '{blueBright.bold \n\n=== Design Tokens ==========================================}'",
		"build": "yarn build:banner && yarn build:clean && yarn build:tokens",
		"watch": "chokidar \"tokens/**/*.json\" -c \"yarn build:tokens\"",
		"develop": "yarn watch"
	},
	"author": "C. Egor Kloos",
	"license": "AGPLv3",
	"homepage": "https://github.com/dutchcelt/trivet#readme",
	"packageManager": "yarn@3.6.1",
	"devDependencies": {
		"@trvt/cli": "^1.0.0",
		"chokidar-cli": "^3.0.0"
	}
}

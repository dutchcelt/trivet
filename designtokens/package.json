{
	"name": "@trvt/designtokens",
	"description": "Trivet, a system for building webpages",
	"version": "0.1.0",
	"type": "module",
	"main": "index.js",
	"files": [
		"build/css/trvt_tokens.css",
		"build/css/trvt_tokens-fonts.css",
		"build/css/trvt_tokens-icons.css",
		"build/js/trvt_tokens.js",
		"build/json/trvt_tokens.json"
	],
	"scripts": {
		"build:clean": "style-dictionary clean ",
		"build:tokens": "style-dictionary build -c config.json",
		"build:icons": "style-dictionary build -c config-icons.json",
		"build:fonts": "style-dictionary build -c config-fonts.json",
		"build": "yarn build:clean && yarn build:tokens && yarn build:icons && yarn build:fonts"
	},
	"author": "C. Egor Kloos",
	"license": "MIT",
	"homepage": "https://github.com/dutchcelt/trivet#readme",
	"packageManager": "yarn@3.1.1",
	"devDependencies": {
		"style-dictionary": "^3.0.3"
	}
}

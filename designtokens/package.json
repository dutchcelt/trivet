{
	"name": "@trvt/designtokens",
	"description": "Trivet, a system for building webpages",
	"version": "0.9.0",
	"type": "module",
	"main": "index.js",
	"files": [
		"config.js",
		"config-fonts.js",
		"/build",
		"/tokens",
		"/theme"
	],
	"scripts": {
		"build:clean": "style-dictionary clean ",
		"build:test": "node scripts/build.js",
		"build:tokens": "node scripts/build.cjs ",
		"build:theme": "node scripts/build.cjs --themePath=../docs/theme --buildPath=../docs/styles",
		"build": "echo \"\n\n=== Design Tokens =========================================\" && yarn build:clean && yarn build:tokens && yarn build:theme",
		"watch:tokens": "chokidar \"tokens/**/*.json\" -c \"yarn build:tokens\"",
		"watch:theme": "chokidar \"theme/**/*.json\" -c \"yarn build:theme\"",
		"watch": "yarn watch:tokens",
		"develop": "yarn watch"
	},
	"author": "C. Egor Kloos",
	"license": "AGPLv3",
	"homepage": "https://github.com/dutchcelt/trivet#readme",
	"packageManager": "yarn@3.4.1",
	"devDependencies": {
		"chokidar-cli": "^3.0.0",
		"style-dictionary": "^3.7.2"
	}
}

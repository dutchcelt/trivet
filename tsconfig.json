{
  "compilerOptions": {
    "module": "NodeNext",
    "checkJs": true,
    "allowJs": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
		"composite": true,
		"emitDeclarationOnly": true,
		"noImplicitAny": false
  },
  "include": ["./packages/core/**/*.js"],
  "exclude": ["bin", "test", "docs", "build", "packages/**/*.cjs", "build", "dist", "tests", "example"]
}

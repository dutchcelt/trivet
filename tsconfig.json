{
	"compilerOptions": {
		"allowJs":  true,
		"checkJs": true,
		"skipLibCheck": true,
		"target": "esnext",
		"module": "nodenext",
		"strict": true,
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": [
		"packages"
	],
	"exclude": [
		"**/dist",
		"**/test",
		"**/tests"
	]
}
